<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GuessActivity"
    android:id="@+id/layout"
    android:background="@drawable/qn">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Make a Guess"
        android:layout_centerHorizontal="true"
        android:id="@+id/sub_text_view"
        android:textSize="30dp"
        android:layout_marginTop="30dp"
        android:textColor="#641E16" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter"
        android:layout_centerHorizontal="true"
        android:id="@+id/edittext_edit_text"
        android:layout_below="@id/sub_text_view"
        android:layout_marginTop="10dp"
        android:background="#EAFAF1"
        android:padding="7dp"
        android:inputType="number"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guess"
        android:id="@+id/guessbutton_button"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/edittext_edit_text"
        android:layout_marginTop="15dp"
        android:background="#EAFAF1"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/message_text_view"
        android:layout_below="@id/guessbutton_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

</RelativeLayout>
